{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-g",
                "-o",
                "${workspaceFolder}/data/game.exe",
                "${workspaceFolder}/data/main.cpp",
                "-I${workspaceFolder}/data/scr/include",
                "-L${workspaceFolder}/data/scr/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
